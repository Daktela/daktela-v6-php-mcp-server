{
    "name": "daktela/daktela-v6-php-mcp-server",
    "description": "Read-only MCP server for the Daktela contact center REST API v6",
    "type": "library",
    "version": "0.1.0",
    "license": "proprietary",
    "keywords": ["mcp", "daktela", "contact-center", "api-client", "model-context-protocol"],
    "homepage": "https://github.com/Daktela/daktela-v6-php-mcp-server",
    "require": {
        "php": ">=8.2",
        "mcp/sdk": "^0.4",
        "symfony/cache": "^6.4|^7.0",
        "league/html-to-markdown": "^5.1",
        "nyholm/psr7": "^1.8",
        "psr/log": "^2.0|^3.0",
        "daktela/daktela-v6-php-connector": "^2.4",
        "psr/simple-cache": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Daktela\\McpServer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Daktela\\McpServer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
